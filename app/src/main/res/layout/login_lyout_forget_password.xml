<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="18dp"
        android:text="为确保是你本人操作,请完成以下验证操作,并设置新密码"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginRight="18dp"
        android:text="漫品 重置密码"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_forget_contract"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:background="@null"
            android:ems="19"
            android:hint="手机号/邮箱"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/colorCursor"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/login__forget_clear_contract"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_close"
            android:visibility="invisible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#80878787" />

        <TextView
            android:id="@+id/login_forget_verification_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:paddingLeft="10dp"
            android:text="获取验证码"
            android:textColor="#FF0000" />
    </LinearLayout>

    <EditText
        android:id="@+id/mp_forget_passworld_verify_code"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        android:ems="19"
        android:hint="短信/邮箱 验证码"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/colorCursor"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login_new_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        android:ems="19"
        android:hint="输入新密码"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/colorCursor"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login_confirm_new_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        android:ems="19"
        android:hint="确认新密码"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/colorCursor"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="必须是6-20个英文字母,数字或符号(除空格),且字母,数字和标点符号至少包含两种"
        android:textColor="@color/btn_bg_press_2" />

    <CheckBox
        android:id="@+id/login_visible_passworld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:checked="true"
        android:buttonTint="@color/black"
        android:text="显示密码"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/login__forget_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/button_bg"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <com.victor.loading.rotate.RotateLoading
        android:id="@+id/rotateloading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:loading_color="#ffffff"
        app:loading_width="5dp" />

</LinearLayout>