<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="9dp"
    android:paddingRight="18dp"
    android:paddingTop="9dp"
    android:paddingBottom="9dp"
    >

    <LinearLayout
        android:id="@+id/mp_bookr_recommend_list_item_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mp_bookr_recommend_list_item_image"
            android:layout_width="85dp"
            android:layout_height="110dp"
            android:background="@drawable/img_cover_default_circle_1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/mp_bookr_recommend_list_item_bookname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="图书名称测试测试测试测试测试测试测试"
                    android:maxEms="8"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/mp_content_card_ratingbar"
                    style="?attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:isIndicator="true"
                    android:rating="4.5"
                    android:stepSize="0.01"
                    android:theme="@style/RatingBar_CustomColor" />
            </FrameLayout>

            <TextView
                android:id="@+id/mp_bookr_recommend_list_item_bookdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="图书简介"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mp_bookr_recommend_list_item_bookauthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:text="作者"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/mp_bookr_recommend_list_item_bookcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginTop="5dp"
                    android:text="分类"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>