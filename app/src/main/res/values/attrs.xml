<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EditCardTextView">
        <attr name="v_text" format="string" />
        <attr name="v_textSize" format="dimension" />
        <attr name="v_textColor" format="color" />
        <attr name="v_start" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="v_line" format="enum">
            <enum name="vertical" value="1" />
            <enum name="horizontal" value="2" />
        </attr>
        <attr name="v_lineWidth" format="dimension" />
        <attr name="v_lineColor" format="color" />
        <attr name="v_textVerticalMargin" format="dimension" />
        <attr name="v_textHorizontalMargin" format="dimension" />
        <attr name="v_cutChars" format="string" />
        <attr name="v_line2TextMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TimerTextView">
        <attr name="timer_format" format="enum">
            <enum name="rect_format" value="1" />
            <enum name="line_format" value="2" />
            <enum name="simple_chinese" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RefreshProgressBar">
        <attr name="max_progress" format="integer" />
        <attr name="dur_progress" format="integer" />
        <attr name="second_dur_progress" format="dimension" />
        <attr name="second_max_progress" format="dimension" />
        <attr name="bg_color" format="color" />
        <attr name="second_color" format="color" />
        <attr name="font_color" format="color" />
        <attr name="speed" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer" />
        <attr name="stroke_width" format="dimension" />
        <attr name="color_tick" format="color" />
        <attr name="color_checked" format="color" />
        <attr name="color_unchecked" format="color" />
        <attr name="color_unchecked_stroke" format="color" />
    </declare-styleable>

    <declare-styleable name="RecyclerViewBar">
        <attr name="slider_height" format="dimension" />
        <attr name="slider_paddingLeft" format="dimension" />
        <attr name="slider_paddingRight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="imageText">
        <attr name="image" format="reference" />
        <attr name="text" format="string" />
        <attr name="textColor" format="reference" />
    </declare-styleable>

</resources>